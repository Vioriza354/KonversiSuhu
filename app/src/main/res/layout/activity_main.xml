<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        >
        <TextView
            android:id="@+id/celcius"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="CELCIUS"
            android:layout_marginRight="40dp"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/txtCelcius"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/celcius"
            android:layout_alignParentRight="true"

            />
        <Button
            android:id="@+id/btnKonversi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/celcius"
            android:background="@color/colorAccent"
            android:text="KONVERSI"
            android:textColor="#fff"
            />

        <TextView
            android:id="@+id/kelvin"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@+id/btnKonversi"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:text="KELVIN" />

        <TextView
            android:id="@+id/txtKelvin"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:focusable="false"
            android:layout_below="@+id/btnKonversi"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/kelvin"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="0"
            />

        <TextView
            android:id="@+id/farenheit"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@+id/kelvin"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="FARENHEIT" />

        <TextView
            android:id="@+id/txtfarenheit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:focusable="false"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtKelvin"
            android:layout_marginEnd="0dp"
            android:layout_toRightOf="@+id/kelvin"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="0"
            />

        <TextView
            android:id="@+id/reamur"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@+id/farenheit"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="REAMUR" />

        <TextView
            android:id="@+id/txtReamur"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:focusable="false"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtfarenheit"
            android:layout_toRightOf="@+id/kelvin"
            android:ems="10"
            android:text="0"
            android:inputType="numberDecimal"

            />



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>